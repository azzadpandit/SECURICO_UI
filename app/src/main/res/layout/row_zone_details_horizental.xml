<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editText4ZoneName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/editbox_background_add_panel"
        android:elevation="10dp"
        android:layout_marginEnd="10dp"
        android:hint="@string/ZoneName"
        android:padding="12dp"
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@+id/editText6ZoneNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editText6ZoneNumber"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/editbox_background_add_panel"
        android:elevation="10dp"
        android:hint="@string/Number"
        android:padding="12dp"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/editText4ZoneName"
        app:layout_constraintEnd_toStartOf="@+id/ZoneDeleteItem"
        app:layout_constraintTop_toTopOf="@+id/editText4ZoneName"
        />

    <ImageButton
        android:id="@+id/ZoneDeleteItem"
        android:layout_marginEnd="10dp"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:background="@drawable/shape"
        android:backgroundTint="@color/blue"
        android:elevation="10dp"
        android:foregroundGravity="center"
        android:padding="7dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_baseline_delete_24"
        app:layout_constraintBottom_toBottomOf="@+id/editText6ZoneNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editText6ZoneNumber" />

</androidx.constraintlayout.widget.ConstraintLayout>